
<div class="container">
  <div class="row my-3">
    <div class="col">
      <h1 class="m-0">New Game</h1>
    </div>
  </div>

  <div class="row mb-3">
    <div class="col">
      <% @letters.each do |letter| %>
        <button type="button" class="btn btn-info btn-lg mx-2"><%= letter %></button>
      <% end %>
    </div>
  </div>

    <div class="row">
      <div class="col">
          <form method='post' action='/score' data-turbo="false">
            <div class="input-group mb-3">
              <input type="text" name="answer" class="form-control" placeholder="Answer" aria-label="Answer" aria-describedby="button-addon2">
              <input class="btn btn-primary" type="submit" id="button-addon2" name="Play" value="Play" />
            </div>
            <%= hidden_field_tag :letters, @letters.join %>
            <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
          </form>
      </div>
    </div>

</div>
